{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "downlevelIteration": true,
    "lib": ["ES2019"],
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
